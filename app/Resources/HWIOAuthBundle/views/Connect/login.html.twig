{% extends '::base.html.twig' %}

{% block page %}
    <div class="row">
        <div class="small-12 large-12 columns">
            <h1 class="text-center title headerpagehome">{{ 'views.HWIOAuthBundle.connect.login.title1'|trans }}</h1>
            <p class="text-center title">{{ 'views.HWIOAuthBundle.connect.login.title2'|trans }}<p>
        </div>
    </div>
    {% if error %}
        <span>{{ error }}</span>
    {% endif %}

    <div class="row">
        {% for owner in hwi_oauth_resource_owners() %}
            <div class="small-12 large-4 columns text-center">
                <a href="{{ hwi_oauth_login_url(owner) }}" class="th">
                    <span class="logo-small-tiers image-{{ owner }}"></span>
                </a>
            </div>
        {% endfor %}
    </div>

    <div class="row">
        <div class="small-12 large-12 columns">
            <p class="text-center padding-top-10">{{ 'views.HWIOAuthBundle.connect.login.title3'|trans }}</p>
        </div>
        <div class="small-6 large-6 columns text-center">
            <a href="{{ path('fos_user_security_login') }}" class="tiny button round">{{ 'views.HWIOAuthBundle.connect.login.login'|trans }}</a>
        </div>
        <div class="small-6 large-6 columns text-center">
            <a href="{{ path('fos_user_registration_register') }}" class="tiny button round">{{ 'views.HWIOAuthBundle.connect.login.register'|trans }}</a>
        </div>
    </div>
{% endblock page %}